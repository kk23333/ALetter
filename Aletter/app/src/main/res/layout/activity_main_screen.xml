<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.example.kk.aletter.MainScreen">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/item6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <ImageButton
            android:id="@+id/ICON1"
            android:layout_width="80dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:background="@drawable/icon_02_1"
            />

        <ImageButton
            android:id="@+id/ICON2"
            android:layout_width="70dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:background="@drawable/icon_01"
            />

        <ImageButton
            android:id="@+id/ICON3"
            android:layout_width="70dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:padding="3dp"
            android:background="@drawable/icon_03_1"
           />

        <ImageButton
            android:id="@+id/ICON4"
            android:layout_width="60dp"
            android:layout_margin="12dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:padding="3dp"
            android:background="@drawable/icon_04_1"
           />
    </LinearLayout>


</RelativeLayout>
